<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.EditProductActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@drawable/shape_rect01">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:background="@null"
            android:contentDescription="Back button"
            android:src="@drawable/ic_back_white" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Edit Product"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Form to input data -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/productIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:src="@drawable/ic_add_shopping_primary"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp" />

        <!-- Title EditText with touch target size fix -->
        <EditText
            android:id="@+id/titleEt"
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_title_gray"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:inputType="textPersonName|textCapWords"
            android:layout_below="@+id/productIconIv" />

        <!-- Description EditText with touch target size fix -->
        <EditText
            android:id="@+id/descriptionEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:hint="Description"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_title_gray"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:inputType="textCapSentences|textMultiLine"
            android:layout_below="@+id/titleEt" />

        <!-- Category TextView -->
        <TextView
            android:id="@+id/categoryTv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:hint="Category"
            android:drawableEnd="@drawable/ic_down_gray"
            android:drawableStart="@drawable/ic_categories_gray"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_below="@+id/descriptionEt" />

        <!-- Quantity EditText with touch target size fix -->
        <EditText
            android:id="@+id/quantityEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_cart_gray"
            android:drawablePadding="10dp"
            android:hint="Quantity e.g. kg, g etc"
            android:padding="10dp"
            android:inputType="textCapWords"
            android:layout_below="@+id/categoryTv" />

        <!-- Price EditText with touch target size fix -->
        <EditText
            android:id="@+id/priceEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_cart_gray"
            android:drawablePadding="10dp"
            android:hint="Price"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:layout_below="@+id/quantityEt" />

        <!-- Discount SwitchCompat with touch target size fix -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/discountSwitch"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/priceEt"
            android:text="Discount" />

        <!-- Discounted Price EditText with touch target size fix -->
        <EditText
            android:id="@+id/discountedPriceEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_cart_gray"
            android:drawablePadding="10dp"
            android:hint="Discount Price"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:layout_below="@+id/discountSwitch" />

        <!-- Discount Note EditText with touch target size fix -->
        <EditText
            android:id="@+id/discountedNoteEt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_cart_gray"
            android:drawablePadding="10dp"
            android:hint="Discount Note e.g. 10% off"
            android:padding="10dp"
            android:inputType="textCapSentences"
            android:layout_below="@+id/discountedPriceEt" />

        <!-- Add Product Button -->
        <Button
            android:id="@+id/updateProductBtn"
            android:text="Update Product"
            android:layout_below="@+id/discountedNoteEt"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.Button.Colored"
            android:minWidth="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

</LinearLayout>
