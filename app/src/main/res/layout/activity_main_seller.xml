<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainSellerActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rect01"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/moreBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_more_white"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:layout_marginEnd="-15dp"
            android:contentDescription="More options" />

        <!-- Logout Button -->
        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_marginEnd="-15dp"
            android:layout_toStartOf="@id/moreBtn"
            android:background="@null"
            android:src="@drawable/ic_logout_white"
            android:contentDescription="Logout"/>

        <!-- Edit Profile Button -->
        <ImageButton
            android:id="@+id/editProfileBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_marginEnd="-15dp"
            android:layout_toStartOf="@id/logoutBtn"
            android:background="@null"
            android:src="@drawable/ic_edit_white"
            android:contentDescription="Edit Profile"/>

        <!-- Add Product Button -->
        <ImageButton
            android:id="@+id/addProductBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_toStartOf="@id/editProfileBtn"
            android:layout_marginEnd="-15dp"
            android:background="@null"
            android:src="@drawable/ic_add_shopping_white"
            android:contentDescription="Add Product"/>

        <!-- Profile Image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_store_gray"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorWhite"
            android:contentDescription="Profile Image" />

        <!-- Name TextView -->
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_toEndOf="@id/profileIv"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <!-- Shop Name TextView -->
        <TextView
            android:id="@+id/shopNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textColor="@color/colorWhite"
            android:layout_toEndOf="@id/profileIv"
            android:layout_below="@+id/nameTv" />

        <!-- Email TextView -->
        <TextView
            android:id="@+id/emailTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorWhite"
            android:layout_toEndOf="@id/profileIv"
            android:layout_below="@+id/shopNameTv" />

        <!-- Tabs: products, orders -->
        <LinearLayout
            android:layout_below="@+id/profileIv"
            android:background="@drawable/shape_rect03"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <!-- Products Tab -->
            <TextView
                android:id="@+id/tabProductsTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Products"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/shape_rect04"
                android:textColor="@color/colorBlack"/>

            <!-- Orders Tab -->
            <TextView
                android:id="@+id/tabOrdersTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Orders"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Products -->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/productsRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarRl">

        <!-- SearchView -->
        <EditText
            android:id="@+id/searchProductEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/shape_rect02"
            android:drawableStart="@drawable/ic_search_gray"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:layout_toStartOf="@id/filterProductBtn"
            android:minHeight="48dp"
            android:gravity="center_vertical"
            android:hint="Search"/>

        <!-- Filter Button -->
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/filterProductBtn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_filter_gray"
            android:contentDescription="Filter"/>

        <!-- Show filtered product title -->
        <TextView
            android:id="@+id/filteredProductsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchProductEt"
            android:textColor="@color/colorBlack"
            android:text="Showing All"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- RecyclerView for Products -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filteredProductsTv"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_product_seller"/>
    </RelativeLayout>

    <!-- Orders Section -->
    <RelativeLayout
        android:id="@+id/ordersRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarRl">

        <!-- Filtered Orders TextView -->
        <TextView
            android:id="@+id/filteredOrdersTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toStartOf="@id/filterOrderBtn"
            android:background="@drawable/shape_rect02"
            android:padding="10dp"
            android:text="Showing All Orders"/>

        <!-- Filter Orders Button -->
        <ImageButton
            android:id="@+id/filterOrderBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_filter_gray"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:contentDescription="Filter"/>

        <!-- show Orders -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ordersRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/filteredOrdersTv"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_order_seller"/>
    </RelativeLayout>

</RelativeLayout>
